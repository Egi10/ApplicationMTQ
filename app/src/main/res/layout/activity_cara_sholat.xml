<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.egi_fcb.applicationmtq.Package_Hijaiyah_Perkenalan.Activity_Hijaiyah_Jelas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayout">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:text="Before Undressing"
                        android:gravity="center"
                        android:textColor="@color/Accent"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:id="@+id/textViewjudul"/>
                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="80sp"
                    android:layout_marginBottom="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    app:cardCornerRadius="15sp"
                    app:cardElevation="5sp"
                    app:cardBackgroundColor="#ecf0f1"
                    android:id="@id/card_view"
                    android:foreground="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_menu_camera"
                        android:id="@+id/image_huruf"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true" />
                </android.support.v7.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="390sp"
                        android:layout_marginBottom="20sp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        app:cardCornerRadius="15sp"
                        app:cardElevation="5sp"
                        android:paddingTop="10sp"
                        app:cardBackgroundColor="#ecf0f1"
                        android:foreground="?attr/selectableItemBackground"
                        android:id="@+id/cardView">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30sp"
                                android:layout_marginLeft="20sp"
                                android:layout_marginRight="20sp"
                                android:gravity="right"
                                android:foreground="?attr/selectableItemBackground"
                                android:id="@+id/cardView1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Before Undressing"
                                    android:gravity="right"
                                    android:textColor="#2c3e50"
                                    android:textDirection="anyRtl"
                                    android:textSize="30sp"
                                    android:id="@+id/tv_ayat"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/cardView1">
                                <TextView
                                    android:id="@+id/tv_arti"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="left"
                                    android:layout_marginTop="5sp"
                                    android:layout_marginBottom="10sp"
                                    android:layout_marginLeft="20sp"
                                    android:layout_marginRight="20sp"
                                    android:text="Before Undressing"
                                    android:textColor="@color/Accent"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/textViewket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="20sp"
                        android:paddingTop="20sp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:text="Before Undressing"
                        android:textColor="@color/Accent"
                        android:textSize="16sp"
                        android:layout_below="@+id/cardView"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
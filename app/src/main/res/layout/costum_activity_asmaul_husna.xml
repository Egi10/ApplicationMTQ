<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp"
        app:cardCornerRadius="15sp"
        app:cardElevation="5sp"
        app:cardBackgroundColor="#ecf0f1"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="1"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/tv_bacaan"
            android:textColor="#2c3e50"
            android:id="@+id/tv_no" >
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="50sp"
            android:paddingTop="30sp"
            android:text="BOLD"
            android:textColor="#2c3e50"
            android:id="@+id/tv_ayat" >
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:paddingTop="110sp"
            android:layout_below="@+id/tv_ayat"
            android:text="BOLD"
            android:textColor="#2c3e50"
            android:id="@+id/tv_bacaan" >
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:text="BOLD"
            android:paddingTop="160sp"
            android:paddingBottom="30sp"
            android:layout_below="@+id/tv_bacaan"
            android:textColor="#2c3e50"
            android:id="@+id/tv_arti" >
        </TextView>
    </android.support.v7.widget.CardView>
</RelativeLayout>